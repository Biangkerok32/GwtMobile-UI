<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		.modify {
			-webkit-box-orient: vertical !important;
			-webkit-box-align: start !important;		
		}
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Flip Switch</g:Label>			
		</m:HeaderPanel>
		<m:ScrollPanel hasTextBox="true">
			<m:ListPanel selectable="false">
				<m:ListItem styleName="{style.modify}">
					<m:FlipSwitch>iPhone</m:FlipSwitch>
					<m:FlipSwitch>Android</m:FlipSwitch>
					<m:FlipSwitch>BlackBerry</m:FlipSwitch>
					<m:FlipSwitch>WP7</m:FlipSwitch>
				</m:ListItem>
				<m:ListItem styleName="{style.modify}">
					<g:HTML styleName="FlipSwitch">
						<div>
							<div>ON</div>
							<div></div>
							<div>OFF</div>
						</div>
					</g:HTML>
				</m:ListItem>
			</m:ListPanel>			
		</m:ScrollPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 