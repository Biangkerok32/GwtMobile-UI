<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		.modify > div {
			-webkit-box-orient: vertical;
			-webkit-box-align: start;
		}
		.modify select {
			min-width: 18em !important;
		}
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Drop Down List</g:Label>			
		</m:HeaderPanel>
		<m:ScrollPanel>
			<m:ListPanel selectable="false" secondaryStyle="{style.modify}">
				<m:ListItem>
					<g:Label>Favorite Car:</g:Label>
					<m:DropDownList ui:field="car">
						<m:DropDownItem>Volvo</m:DropDownItem>
						<m:DropDownItem>Saab</m:DropDownItem>
						<m:DropDownItem>Mercedes</m:DropDownItem>
						<m:DropDownItem>Audi</m:DropDownItem>
					</m:DropDownList>
				</m:ListItem>
				<m:ListItem>
					<g:Label>Favorite Movie:</g:Label>
					<m:DropDownList ui:field="movie">
						<m:DropDownItem value="2009">The Hangover</m:DropDownItem>
						<m:DropDownItem value="1998">Saving Private Ryan</m:DropDownItem>
						<m:DropDownItem value="2003">Finding Nemo</m:DropDownItem>
						<m:DropDownItem value="1994">The Shawshank Redemption</m:DropDownItem>
					</m:DropDownList>
				</m:ListItem>
				<m:ListItem>
					<g:Label>Favorite City:</g:Label>
					<m:DropDownList ui:field="city">
						<m:DropDownItem value="RO">Rome, Italy</m:DropDownItem>
						<m:DropDownItem value="NY">New York, USA</m:DropDownItem>
						<m:DropDownItem value="HK">Hong Kong, China</m:DropDownItem>
					</m:DropDownList>
				</m:ListItem>
			</m:ListPanel>			
		</m:ScrollPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 