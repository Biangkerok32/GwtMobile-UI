<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		.Page {
			display:-webkit-box;
			-webkit-box-orient: vertical;			
		}
		.FixedHeight {
			min-height: 16em;
			max-height: 16em;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.Page}">
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Tab Panel</g:Label>
		</m:HeaderPanel>
		<m:TabPanel ui:field="tab" defaultTabIndex="2" secondaryStyle="{style.FixedHeight}">
			<m:TabHeaderPanel>
				<m:TabHeader>
					<g:Label>Tab1</g:Label>
				</m:TabHeader>
				<m:TabHeader>
					<g:Label>Tab2</g:Label>
				</m:TabHeader>
				<m:TabHeader>
					<g:Label>Tab3</g:Label>
				</m:TabHeader>
			</m:TabHeaderPanel>
			<m:TabContentPanel>	
				<m:TabContent>
					<g:Label>Tabs On Top</g:Label>
					<g:Label>Tab1 Content</g:Label>
				</m:TabContent>
				<m:TabContent>
					<g:Label>Tabs On Top</g:Label>
					<g:Label>Tab2 Content</g:Label>
				</m:TabContent>
				<m:TabContent>
					<g:Label>Tabs On Top</g:Label>
					<g:Label>Tab3 Content</g:Label>
					<g:Label text="height test"/>
					<g:Label text="New Label"/>
				</m:TabContent>
			</m:TabContentPanel>	
		</m:TabPanel>
		<div style="height:.5em"/>		
		<m:TabPanel ui:field="tab2" tabPosition="Bottom" defaultTabIndex="1">
			<m:TabHeaderPanel>
				<m:TabHeader>
					<g:Label>Tab1</g:Label>
				</m:TabHeader>
				<m:TabHeader>
					<g:Label>Tab2</g:Label>
				</m:TabHeader>
				<m:TabHeader>
					<g:Label>Tab3</g:Label>
				</m:TabHeader>
			</m:TabHeaderPanel>
			<m:TabContentPanel>	
				<m:TabContent>
					<g:Label>Tabs On Bottom</g:Label>
					<g:Label>Tab1 Content</g:Label>
				</m:TabContent>
				<m:TabContent>
					<g:Label>Tabs On Bottom</g:Label>
					<g:Label>Tab2 Content</g:Label>
				</m:TabContent>
				<m:TabContent>
					<g:Label>Tabs On Bottom</g:Label>
					<g:Label>Tab3 Content</g:Label>
					<g:Label>Tab3 Content</g:Label>
					<g:Label>Tab3 Content</g:Label>
					<g:Label>Tab3 Content</g:Label>
					<g:Label>Tab3 Content</g:Label>
				</m:TabContent>
			</m:TabContentPanel>	
		</m:TabPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 