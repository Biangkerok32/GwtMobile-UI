<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
		.center {
			display: -webkit-box;
			-webkit-box-flex: 1;
			-webkit-box-pack: center;
		}
		.multiline {
			font-size: 0.6em;
			max-width: 3.5em;
			text-align: center;
		}
					
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label styleName="{style.center}">Tab Panel</g:Label>
			<g:Label styleName="{style.multiline}">Tabs On Bottom</g:Label>
			<m:FlipSwitch ui:field="tabsOnBottom" value="false"/>			
		</m:HeaderPanel>
		<m:TabPanel ui:field="tab">
			<m:Tab>
				<m:TabHeader>
					<g:Label>Tab1</g:Label>
				</m:TabHeader>
				<m:TabContent>
					<g:HTMLPanel styleName="Tab-Content">
						<g:Label>Tab1 Content</g:Label>
					</g:HTMLPanel>
				</m:TabContent>
			</m:Tab>
			<m:Tab>
				<m:TabHeader>
					<g:Label>Tab2</g:Label>
				</m:TabHeader>
				<m:TabContent>
					<g:HTMLPanel styleName="Tab-Content">
						<g:Label>Tab2 Content</g:Label>
					</g:HTMLPanel>
				</m:TabContent>
			</m:Tab>
			<m:Tab>
				<m:TabHeader>
					<g:Label>Tab3</g:Label>
				</m:TabHeader>
				<m:TabContent>
					<g:HTMLPanel styleName="Tab-Content">
						<g:Label>Tab3 Content</g:Label>
					</g:HTMLPanel>
				</m:TabContent>
			</m:Tab>
		</m:TabPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 