<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets" 
	>
	<ui:style>
	</ui:style>
	<m:HTMLPanel>
		<m:HeaderPanel>
			<m:HorizontalPanel>
				<m:VerticalPanel>
					<m:Label text="GWT Mobile" labelTemplate="Emphasised"/>
					<m:Label text="Demo for Tabs on the bottom" labelTemplate="Legend"/>
				</m:VerticalPanel>
			</m:HorizontalPanel>
			<m:Button caption="Back" iconImage="Back" iconPosition="Left" ui:field="backButton">Back</m:Button>
		</m:HeaderPanel>
		<m:TabPanel tabsPosition="Reverse" height="" fullHeight="true">
				<m:TabHeaderPanel>
					<m:TabHeader >
						<m:Label text="tab1-head"/>
					</m:TabHeader>
					<m:TabHeader>
						<m:Label text="tab2-head"/>
					</m:TabHeader>
				</m:TabHeaderPanel>
				<m:TabContentPanel>
					<m:TabContent height="100%" >
						<m:ScrollPanel height="" withPadding="false">
							<m:Label text="tabcontent1"/>
						</m:ScrollPanel>
					</m:TabContent>
					<m:TabContent>
						<m:Label text="tbcontent2"/>
					</m:TabContent>
				</m:TabContentPanel>
			</m:TabPanel>
	</m:HTMLPanel>	
</ui:UiBinder> 