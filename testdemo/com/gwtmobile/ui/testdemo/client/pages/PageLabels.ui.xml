<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets"
	xmlns:x="urn:import:com.gwtmobile.ui.testdemo.client.widgets"
	>
	<ui:style>
	</ui:style>
	<m:PagePanel transitionFlavor="FADE">
		<m:HeaderSimplePanel>
			<m:HorizontalPanel>
				<m:VerticalPanel>
					<m:Label text="GWT Mobile" labelTemplate="Emphasised"/>
					<m:Label labelTemplate="Legend" text="Demo for Labels with variants"/>
				</m:VerticalPanel>
			</m:HorizontalPanel>
			<m:Button caption="Back" iconImage="Back" iconPosition="Left" ui:field="backButton" buttonFlavor="ButtonBack">Back</m:Button>
		</m:HeaderSimplePanel>
		<m:ScrollPanel height="683px">
			<m:VerticalPanel>
				<m:Label text="Label Header1 centered" wordWrap="false" labelTemplate="Header1" horizontalAlignment="ALIGN_CENTER"/>
				<m:Label horizontalAlignment="ALIGN_RIGHT" labelTemplate="Header2" text="Label Header2 right aligned" wordWrap="false"/>
				<m:Label text="Default Label with V padding" withVPadding="true"/>
				<m:Label text="Default Label with word wrap and paddings, plus variant1" withVPadding="true" withHPadding="true" labelBackgroundVariant="Var1"/>
				<m:Label labelBackgroundVariant="Var2" text="Default Label without word wrap, plus variant2" wordWrap="false"/>
				<m:Label labelBackgroundVariant="Var3" text="Emphasised Label without word wrap, plus variant3 and padding H" withHPadding="true" labelTemplate="Emphasised"/>
				<m:Label labelBackgroundVariant="Var4" labelTemplate="SmallEmphasised" text="Small Emphasised Label without word wrap, plus variant4 and paddings" withHPadding="true" withVPadding="true"/>
				<m:Label labelBackgroundVariant="Var5" labelTemplate="Legend" text="Legend Label without word wrap, plus variant5 and paddings" withHPadding="true" withVPadding="true"/>
				<m:Label labelTemplate="Small" text="Small Label with word wrap, without variants and padding V" wordWrap="false" withVPadding="true"/>
				<m:Slider value="50"/>
			</m:VerticalPanel>
			
	

			
		</m:ScrollPanel>
	</m:PagePanel>	
</ui:UiBinder> 